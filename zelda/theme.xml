<theme>
  <formatVersion>6</formatVersion>
  <include>./../collection.svg.xml</include>

  <view name="system">
    <image name="lineart" extra="true">
      <visible>${showCustomCollectionLineart}</visible>
      <path>./lineart.png</path>
      <size>0.35 auto</size>
    </image>
  </view>

  <view name="basic">
    <image name="lineart" extra="true">
      <visible>true</visible>
      <path>./lineart.png</path>
      <size>0.35 auto</size>
    </image>
  </view>

  <view name="system, basic, detailed, video, grid">
    <image name="logo">
      <path>./marquee.svg</path>
    </image>
  </view>
</theme>
