<theme>
  <view name="grid">
    <video name="md_video">
      <visible>true</visible>
      <showSnapshotNoVideo>true</showSnapshotNoVideo>
      <showSnapshotDelay>false</showSnapshotDelay>
      <delay>2</delay>
      <zIndex>1</zIndex>
      <origin>1 0</origin>
      <pos>1 0</pos>
      <maxSize>1.2 0.65</maxSize>
    </video>

    <image name="md_image-gradient-solid-container" extra="true">
      <color>ff0000aa</color>
      <origin>0 0</origin>
      <pos>0 0</pos>
    </image>
    <image name="md_image-gradient-container" extra="true">
      <color>ff0000aa</color>
      <origin>1 1</origin>
      <pos>1 0.90</pos>
      <tile>false</tile>
    </image>
    <image name="md_image-gradient-solid-bottom-container" extra="true">
      <color>ff0000aa</color>
      <size>0.20 1</size>
      <origin>0 0</origin>
      <pos>0 0</pos>
    </image>
    <image name="md_image-gradient-left-right-container" extra="true">
      <color>ff0000aa</color>
      <origin>0 0</origin>
      <pos>0.20 0</pos>
    </image>
  </view>
</theme>
