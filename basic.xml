<theme>
  <formatVersion>6</formatVersion>

  <view name="basic">
    <image name="background" extra="true">
      <color>${themeColorBackground}</color>
    </image>

    <image name="lineart" extra="true">
      <path>${themeFolderArt}/lineart/${system.theme}.svg</path>
      <color>${themeColorAccent}40</color>
      <rotation>0</rotation>
      <origin>0.5 0.5</origin>
      <pos>0.65 0.45</pos>
      <size>0.3 0</size>
    </image>

    <image name="logo">
      <origin>0.5 0.5</origin>
      <pos>0.5 0.09</pos>
      <maxSize>0.12 0.08</maxSize>
    </image>

    <text name="logoText">
      <origin>0.5 0.5</origin>
      <pos>0.5 0.09</pos>
    </text>

    <textlist name="gamelist">
      <alignment>right</alignment>
      <origin>1 0</origin>
      <pos>0.45 0.15</pos>
      <size>0.40 0.75</size>
    </textlist>

    <helpsystem name="help">
      <origin>0.5 1</origin>
      <pos>0.5 0.95</pos>
    </helpsystem>
  </view>
</theme>
