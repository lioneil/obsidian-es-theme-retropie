<theme>
  <formatVersion>6</formatVersion>

  <view name="basic">
    <image name="background" extra="true">
      <color>${themeColorBackground}</color>
    </image>

    <image name="logo">
      <origin>0.5 0.5</origin>
      <pos>0.5 0.09</pos>
      <maxSize>0.12 0.08</maxSize>
    </image>

    <text name="logoText-background" extra="true">
      <text>${system.fullName}</text>
      <color>2c2c2c</color>
      <fontPath>${themeFontAlternative}</fontPath>
      <forceUppercase>true</forceUppercase>
      <fontSize>0.120</fontSize>
      <origin>0.5 0</origin>
      <pos>0.5 0</pos>
    </text>

    <text name="logoText">
      <origin>0.5 0.5</origin>
      <pos>0.5 0.09</pos>
    </text>

    <textlist name="gamelist">
      <origin>0.5 0</origin>
      <pos>0.5 0.15</pos>
      <size>0.9 0.75</size>
    </textlist>

    <helpsystem name="help">
      <origin>0.5 1</origin>
      <pos>0.5 0.95</pos>
    </helpsystem>
  </view>
</theme>
