<theme>
  <formatVersion>6</formatVersion>
  <include>./partials/hide-metadata.xml</include>

  <variables>
    <gamelistSidebarWidth>0.3</gamelistSidebarWidth>
    <mainContentWidth>0.7</mainContentWidth>
  </variables>

  <view name="detailed">
    <!-- START: Gamelist Area -->
    <image name="logo">
      <origin>0.5 0.5</origin>
      <pos>0.15 0.09</pos>
      <maxSize>0.12 0.08</maxSize>
    </image>

    <text name="logoText">
      <text>${system.fullName}</text>
      <origin>0.5 0.5</origin>
      <pos>0.15 0.09</pos>
      <alignment>center</alignment>
    </text>

    <textlist name="gamelist">
      <origin>0 0</origin>
      <pos>0 0.15</pos>
      <size>0.3 0.75</size>
      <alignment>left</alignment>
      <horizontalMargin>0.02</horizontalMargin>
    </textlist>

    <image name="gamelist-container" extra="true">
      <origin>0 0</origin>
      <pos>0 0</pos>
      <size>0.3 1</size>
      <path>${systemWhiteImage}</path>
      <color>${themeColorBackground}</color>
      <zIndex>4</zIndex>
    </image>
    <!-- END: Gamelist Area -->

    <!-- START: Main Content Area -->
    <image name="main-content-gradient-container" extra="true">
      <path>${themeFolderArt}/transparent-gradient.white.png</path>
      <color>${themeColorContentBackground}</color>
      <origin>0 0</origin>
      <pos>0.3 0</pos>
      <size>0.7 1</size>
      <tile>true</tile>
      <zIndex>1</zIndex>
    </image>
    <!-- <image name="md_image">
      <visible>true</visible>
      <origin>0.5 0.5</origin>
      <pos>0.65 0.5</pos>
      <maxSize>1.042 1.17</maxSize>
      <zIndex>2</zIndex>
    </image> -->

    <image name="md_marquee">
      <visible>true</visible>
      <pos>0.65 0.6</pos>
      <origin>0.5 1</origin>
      <maxSize>0.20 0.15</maxSize>
      <zIndex>3</zIndex>
    </image>

    <text name="md_lbl_rating, md_lbl_releasedate, md_lbl_developer, md_developer, md_lbl_publisher, md_publisher, md_lbl_genre, md_genre, md_lbl_players, md_players, md_lbl_lastplayed, md_lbl_playcount, md_playcount, md_description, md_name">
      <visible>false</visible>
      <origin>0.5 0</origin>
      <color>${themeColorText}</color>
      <alignment>center</alignment>
    </text>

    <!-- <image name="metadata-container" extra="true">
      <path>${systemWhiteImage}</path>
      <color>${themeColorAccent}aa</color>
      <origin>0 1</origin>
      <pos>0.3 0.9</pos>
      <size>0.7 0.32</size>
    </image> -->

    <!-- START: Content Guides -->
    <image name="md_genre-container-guide" extra="true">
      <path>${systemWhiteImage}</path>
      <color>${themeColorAccent}aa</color>
      <origin>0 1</origin>
      <pos>0.4 0.80</pos>
      <size>0.20 0.03</size>
    </image>
    <image name="md_description-container-guide" extra="true">
      <path>${systemWhiteImage}</path>
      <color>${themeColorAccent}aa</color>
      <origin>0 1</origin>
      <pos>0.4 0.90</pos>
      <size>0.50 0.10</size>
    </image>
    <!-- END: Content Guides -->

    <!-- START: Metadata -->
    <text name="md_genre">
      <visible>true</visible>
      <color>${themeColorMuted}</color>
      <fontSize>${themeFontSizeSubtitle}</fontSize>
      <lineSpacing>1</lineSpacing>
      <alignment>left</alignment>
      <origin>0 1</origin>
      <pos>0.4 0.80</pos>
      <size>0.20 0.03</size>
    </text>

    <!-- <image name="md_developer-container-guide" extra="true">
      <path>${systemWhiteImage}</path>
      <color>${themeColorAccent}00</color>
      <origin>0.5 0.5</origin>
      <pos>0.60 0.63</pos>
      <maxSize>0.06 0.05</maxSize>
    </image>
    <image name="md_developer-icon" extra="true">
      <path>${themeFolderArt}/icons/processor.svg</path>
      <color>${themeColorMuted}</color>
      <origin>0.5 0.5</origin>
      <pos>0.60 0.63</pos>
      <maxSize>0.03 0.03</maxSize>
    </image>
    <text name="md_developer">
      <visible>true</visible>
      <color>${themeColorMuted}</color>
      <fontSize>${themeFontSizeSubtitle}</fontSize>
      <origin>0.5 0.5</origin>
      <pos>0.60 0.66</pos>
      <size>0.06 0.05</size>
      <lineSpacing>1</lineSpacing>
      <alignment>center</alignment>
    </text> -->
    <!-- END: Metadata -->

    <text name="md_description">
      <visible>true</visible>
      <alignment>left</alignment>
      <origin>0 1</origin>
      <pos>0.4 0.90</pos>
      <size>0.50 0.10</size>
    </text>

    <helpsystem name="help">
      <origin>0.5 1</origin>
      <pos>0.65 0.95</pos>
    </helpsystem>
    <!-- END: Main Content Area -->
  </view>
</theme>
