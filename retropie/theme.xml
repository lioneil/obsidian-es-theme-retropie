<theme>
  <formatVersion>6</formatVersion>
  <include>./../theme.xml</include>
  <include>./../partials/hide-metadata.xml</include>
  <include>./../partials/hide-gradients.xml</include>

  <variables>
    <themeArtFolder>./../assets/art</themeArtFolder>
    <gridWidth>1</gridWidth>
    <gridHeight>0.15</gridHeight>
    <gridPosition>0 0.75</gridPosition>
    <gridAutoLayout>9 1</gridAutoLayout>
    <gridScrollDirection>horizontal</gridScrollDirection>
    <gridTileWidth>auto</gridTileWidth>
    <gridTileHeight>auto</gridTileHeight>
  </variables>

  <view name="detailed, video">
    <image name="md_image">
      <visible>true</visible>
      <origin>0.50 0.50</origin>
      <pos>0.65 0.35</pos>
      <size>0.25 0</size>
      <zIndex>10</zIndex>
    </image>

    <text name="md_name">
      <visible>true</visible>
      <fontSize>${themeFontSizeTitle}</fontSize>
      <pos>0.40 0.705</pos>
      <alignment>left</alignment>
      <origin>0 0</origin>
      <size>0.55 0</size>
      <zIndex>10</zIndex>
    </text>

    <text name="md_description">
      <visible>true</visible>
    </text>
  </view>

  <view name="grid">
    <image name="logo">
      <visible>true</visible>
      <origin>0 0.5</origin>
      <pos>0.05 0.09</pos>
      <maxSize>0.08 0.05</maxSize>
    </image>

    <text name="md_name">
      <visible>true</visible>
      <pos>0.05 0.405</pos>
    </text>

    <image name="md_image">
      <visible>true</visible>
      <origin>0.50 0.50</origin>
      <pos>0.75 0.30</pos>
      <size>0.25 0</size>
      <zIndex>10</zIndex>
    </image>

    <imagegrid name="gamegrid">
      <padding>0.05 0</padding>
      <imageSource>thumbnail</imageSource>
    </imagegrid>

    <text name="md_description">
      <visible>true</visible>
      <alignment>left</alignment>
      <origin>0 0</origin>
      <pos>0.05 0.405</pos>
      <size>0.45 0.10</size>
    </text>
  </view>
</theme>
