<theme>
  <formatVersion>6</formatVersion>
  <include>./../collection.xml</include>

  <view name="basic">
    <image name="lineart" extra="true">
      <visible>true</visible>
      <path>./lineart.png</path>
      <color>${themeColorAccent}30</color>
      <rotation>0</rotation>
      <origin>0.5 0.5</origin>
      <pos>0.65 0.45</pos>
      <size>auto 0.65</size>
    </image>
  </view>

  <view name="system">
    <image name="lineart" extra="true">
      <visible>${showCustomCollectionLineart}</visible>
      <path>./lineart.png</path>
      <rotation>0</rotation>
    </image>
  </view>

  <view name="system, basic, detailed, video, grid">
    <image name="logo">
      <path>./marquee.png</path>
    </image>
  </view>
</theme>
